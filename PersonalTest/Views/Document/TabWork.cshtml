                    <th>17</th>
                    <th>18</th>
                    <th>19</th>
                    <th>20</th>
                    <th>21</th>
                    <th>22</th>
                    <th>23</th>
                    <th>24</th>
                    <th>25</th>
                    <th>26</th>
                    <th>27</th>
                    <th>28</th>
                    <th>29</th>
                    <th>30</th>
                    <th>31</th>
                </tr>
            </thead>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@ViewBag.Count</td>
                    <td>@app.Employee.Fio</td>
                    <td>@app.Appoint.AppName</td>
                    <td>@app.Year</td>
                    <td>@app.Month</td>
                    <td>@app.Day1</td>
                    <td>@app.Day2</td>
                    <td>@app.Day3</td>
                    <td>@app.Day4</td>
                    <td>@app.Day5</td>
                    <td>@app.Day6</td>
                    <td>@app.Day7</td>
                    <td>@app.Day8</td>
                    <td>@app.Day9</td>
                    <td>@app.Day10</td>
                    <td>@app.Day11</td>
                    <td>@app.Day12</td>
                    <td>@app.Day13</td>
                    <td>@app.Day14</td>
                    <td>@app.Day15</td>
                    <td>@app.Day16</td>
                    <td>@app.Day17</td>
                    <td>@app.Day18</td>
                    <td>@app.Day19</td>
                    <td>@app.Day20</td>
                    <td>@app.Day21</td>
                    <td>@app.Day22</td>
                    <td>@app.Day23</td>
                    <td>@app.Day24</td>
                    <td>@app.Day25</td>
                    <td>@app.Day26</td>
                    <td>@app.Day27</td>
                    <td>@app.Day28</td>
                    <td>@app.Day29</td>
                    <td>@app.Day30</td>
                    <td>@app.Day31</td>
                    @*<td><a class="mylink" href="~/Document/TabelWorkEdit/@app.Id">Edit</a></td>
                    <td><a class="mylink" href="~/Document/TabelWorkDel/@app.Id">Del</a></td>*@
                </tr>
                ViewBag.Count++;
            }
        </table>
        <div class="col-md-offset-5 col-md-10">
            <a href="/Document/Tabel" id="cancel" name="cancel" class="btn btn-warning">Выйти</a>
        </div>
    </div>

