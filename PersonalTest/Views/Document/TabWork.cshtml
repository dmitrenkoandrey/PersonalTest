@model List<PersonalTest.Models.TabelWork>

@{
    ViewData["Title"] = "Работа с табелем";
}

    <div>
        <div class="row"><div class="col-md-7"><h4>Работа с табелем</h4></div></div>
        <div>
            <div>Название табеля</div>
            <div class="row">
                <div class="col-md-8">@ViewBag.Tab.NumDataMaking</div>
