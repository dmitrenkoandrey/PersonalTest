                    <td>@app.Month</td>
                    <td>@app.DateMaking</td>
                    <td>@app.Structure.StructName</td>
                    <td><a class="mylink" href="~/Document/EmployeeEdit/@app.Id">Edit</a></td>
                    <td><a class="mylink" href="~/Document/EmpDel/@app.Id">Del</a></td>
                </tr>
            }*@

        </table>
        
        <div class="col-md-offset-5 col-md-10">
            <a href="/Document/TabelWork/@Model.Id" name="tablework" class="btn btn-primary">Работа с табелем</a>
            <a href="/Document/Tabel" id="cancel" name="cancel" class="btn btn-warning">Отменить</a>
        </div>
        
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


