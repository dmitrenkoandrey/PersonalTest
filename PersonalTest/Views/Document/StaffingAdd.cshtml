@model PersonalTest.Models.StaffingTable
@{
    ViewData["Title"] = "StaffingAdd";
}

<h4>Штатное расписание</h4>
<div class="jumbotron col-md-8">
    @using (Html.BeginForm("StaffAdd", "Document", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelFor(m => m.StructName, "Структурное подразделение", new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.DropDownList("StructureId", ViewBag.Str as SelectList, new { @class = "form-control" })
                @*@Html.TextBoxFor(m => , new { @class = "form-control" })*@
                @*<span asp-validation-for="StructureId" class="text-danger"></span>*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(m => m.AppointId, "Должность", new { @class = "control-label" })
            </div>
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.AppointId, ViewBag.App as SelectList, new { @class = "form-control" })
                @*@Html.TextBoxFor(m => m.Appoints, new { @class = "form-control" })*@
                @*<span asp-validation-for="AppointName" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(m => m.Salary, "Оклад", new { @class = "control-label" })
            </div>
            <div class="col-md-4 row">
                @Html.TextBoxFor(m => m.Salary, new { @class = "form-control calendar" }) @*<img src="~/image/CALENDAR.png" id="icon1" style="margin: 5px 0px; display: inline; width: 20px;" runat="server" />*@
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(m => m.Quantity, "Количество", new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <button id="submit" name="submit" class="btn btn-primary">Добавить</button>
                <a href="/Document/StaffingTable" id="cancel" name="cancel" class="btn btn-warning">Отменить</a>
            </div>
        </div>
    }
</div>
