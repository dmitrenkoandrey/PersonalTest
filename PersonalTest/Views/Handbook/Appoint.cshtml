@model List<PersonalTest.Models.Appoint>
@{
    ViewData["Title"] = "Должности";
}
<div>
    <div class="row"><div class="col-md-4"><h4>Должности</h4></div><div class="col-md-3"><a class="mylink" asp-controller="Handbook" asp-action="AppointAdd"><h5>Add</h5></a></div></div>
    <div class="row col-sm-5">
        <table class="table table-sm table-info">
            <thead class="table-success">
                <tr>
                    <th>Код</th>
                    <th>Наименование</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var app in Model)
            {
                <tr>
                    <td>@ViewBag.Count</td>
                    <td>@app.AppName</td>
                    <td><a class="mylink" href="~/Handbook/AppointEdit/@app.Id">Edit</a></td>
                    <td><a class="mylink" href="~/Handbook/AppDel/@app.Id">Del</a></td>
                </tr>
                ViewBag.Count++;
            }
        </table>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
