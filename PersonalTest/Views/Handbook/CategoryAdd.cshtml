@model PersonalTest.Models.Category

@{
    ViewData["Title"] = "CategoryAdd";
}

<h4>Категория</h4>
<div class="jumbotron col-md-7">
    @using (Html.BeginForm("CatAdd", "Handbook", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-4">
                @Html.LabelFor(m => m.CatName, "Наименование", new { @class = "control-label" })
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.CatName, new { @class = "form-control calendar", type = "date" })
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <button id="submit" name="submit" value="1" class="btn btn-primary">Добавить</button>
                <a href="/Handbook/Category" id="cancel" name="cancel" class="btn btn-warning">Отменить</a>
            </div>
        </div>
    }
</div>

@section scripts{
    <script src="~/lib/jquery/dist/jquery.datetimepicker.js"></script>
    <script type="text/javascript">
    function setFormSubmitToFalse() { _spFormOnSubmitCalled = false; return true; }

        $(function () {
            $('.calendar').datetimepicker({
                format: 'd.m.Y',
                inline: false,
                lang: 'ru',
                timepicker: false,
                formatDate: 'dd.mm.yy',
                changeMonth: true,
                changeYear: true,
                closeOnDateSelect: true
            });
        });

    </script>
